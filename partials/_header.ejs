<h1>Tiny App</h1>
<% if (username) { %>
  <h2><%= username %></h2>
  <form method="POST" action="/logout">
    <input type="submit" value="Logout">
  </form>
<% } else { %>
  <form method="POST" action="/login">
    <input name="username" type="text" placeholder="Bruce Wayne">
    <input type="submit" value="Login">
  </form>
<% } %>